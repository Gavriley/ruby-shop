<!DOCTYPE html>
<html>
<head>
  <title><%= get_title %></title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= stylesheet_link_tag    'main', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'http://localhost:9292/faye.js' %>
  <%= csrf_meta_tags %>
</head>
<body class="general-block">
  <%= render 'layouts/admin_bar' if @admin %>
  <%= render 'layouts/header' %>
  <%= render 'layouts/sidebar' %>

  <%= yield %>

  <%= javascript_include_tag 'menu' %>
  <%= javascript_include_tag 'tabs' if controller_name == "products" && action_name == 'show' %>
  <%= javascript_include_tag 'modal' %>
  <%= javascript_include_tag 'header' %>
  <%= javascript_include_tag 'file' %>
</body>
</html>
