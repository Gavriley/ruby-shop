<div class="main-block">
  <div class="account-block">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), remote: true) do |f| %>
    <div id="info_block"><%= get_error_messages(resource) %></div>
    <div class="field-block">
      <h2>Реєстрація </h2>
      <div class="form-group">
        <%= f.text_field :login, autofocus: true, class: 'form-control', placeholder: "Введіть логін" %>
      </div>
      <div class="form-group">
        <%= f.email_field :email, class: 'form-control', placeholder: "Введіть e-mail" %>
      </div>
      <div class="form-group">
        <%= f.text_field :name, class: 'form-control', placeholder: "Введіть імя" %>
      </div>
      <div class="form-group">
        <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: "Введіть пароль" %>
      </div>
      <div class="form-group">
        <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', placeholder: "Повторіть пароль" %>
      </div>
      <div class="actions">
        <%= f.submit "Зареєструватись", class: 'btn btn-default' %>
        <%= link_to "Вхід", new_user_session_path, class: 'btn btn-default', id: 'redirect' %>
      </div>
    </div>
    <div class="avatar-block">
      <h2>Аватар</h2>
      <hr>
      <div id="file_block">
        <%= image_tag nil, id: 'file_container', style: "display: none" %>
        <%= f.label :avatar, 'Виберіть аватар', id: 'raper_file', for: 'avatar' %>
        <%= f.file_field :avatar, id: 'avatar' %>
        <%= link_to 'Видалити аватар', nil, id: 'clear', style: "display: none", for: "#avatar" %>
      </div>
    </div>
    <% end %>
  </div>
</div>