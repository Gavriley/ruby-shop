<% if @category.errors.any? %>  
  $("#info_block").html("<%= get_error_messages(@category) %>");
<% else %>
  $("#info_block").html("<%= get_alert %>");
  $(".right-block").html("<%= escape_javascript(render @categories) %>");
  $('#categories_list').html("<%= escape_javascript(select_tag 'category[parent_id]', options_from_collection_for_select(@categories, :id, :name), include_blank: 'Батьківська категорія', class: 'form-control') %>");
<% end %>  

