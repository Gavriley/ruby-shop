<div class="user-item">
  <span class="action-block">
    <%= link_to 'Редагувати', edit_admin_user_path(user) %> |
    <%= link_to 'Видалити', admin_user_path(user), method: :delete, data: { confirm: "Ви впевнені?" } %>
  </span>
  <%= image_tag user.avatar.url(:full) %>
  <div class="user-info">
    <p>Логін: <%= user.login %></p> 
    <p>E-mail: <%= user.email %></p>
    <p>Група: <%= user.role.title %></p>
    <p>Імя: <%= user.name %></p>
    <p>
      Дата реєстрації: <%= user.created_at.strftime("%d").to_s %> 
      <%= set_month(user.created_at.strftime("%m").to_i) %> 
      <%= user.created_at.strftime("%Y").to_s %> року
    </p>  
    <p>Кількість товарів: <%= user.products.count %></p>
  </div>
</div>